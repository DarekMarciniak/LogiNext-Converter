            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.333"/>
                    <TranslateTransform/>
                </TransformGroup>
            </DataGrid.RenderTransform>
        </DataGrid>
        <Image Margin="0,0,10,0" Source="1200px-AmRest_logo.svg.png" Stretch="Fill" Width="90" Height="51" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
